#include <iostream>
#include <Windows.h>
using namespace std;

int main()
{
	SetConsoleCP(1251);
	setlocale(LC_ALL, "Russian");
	int a, b; 
	cout << "Введите первое число: ";
	cin >> a; 
	cout << "Введите второе число: ";
	cin >> b;
	int c = a + b;
	cout << "Сумма чисел = " << c << endl;
	return 0;
}
